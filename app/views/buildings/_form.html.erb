<%= form_for(@building) do |f| %>
  <% if @building.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@building.errors.count, "error") %> prohibited this building from being saved:</h2>

      <ul>
      <% @building.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :lat %><br />
    <%= f.text_field :lat, :class => "lat" %>
  </div>
  <div class="field">
    <%= f.label :lon %><br />
    <%= f.text_field :lon, :class => "lon" %>
  </div>
  <div class="field">
    <%= f.label :region %><br />
    <%= f.collection_select(:region_id, Region.all, :id, :name, :include_blank => 'Select a Region') %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
    
  <%= render "shared/map.html" %>
<% end %>
